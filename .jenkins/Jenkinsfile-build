pipeline {
    agent {label 'node'}

    stages {

        stage('Checkout') {
            steps {
                git branch: "docker", url: 'https://github.com/OpenSnake/titra.git'
            }
        }

        stage('Run build') {
            steps {
                script {
                    def timestamp = new Date().format("yyyyMMdd-HHmmss", TimeZone.getTimeZone('UTC'))
                    sh "docker build -t titra:${timestamp} ."
                }
            }
        }

    }

    post {
        success {
            echo '✅ Continuous Integration completed successfully'
        }
        failure {
            echo '❌ Continuous Integration has not been successfully completed'
        }

    }
}
