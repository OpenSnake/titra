# Generated by Ansible

extensions:
  health_check:

receivers:
  hostmetrics:
    scrapers:
      cpu:
      memory:
      disk:
      network:
      load:
  filelog:
    include:
      - "/var/log/mongodb/mongod.log"

processors:
  batch:

exporters:
  splunk_hec/metrics:
    token: "{{ hec_token }}"
    endpoint: "http://192.168.56.150:8088"
    index: "mongodb_metrics"
  splunk_hec/logs:
    token: "{{ hec_token }}"
    endpoint: "http://192.168.56.150:8088"
    index: "mongodb_logs"

service:
  extensions: [health_check]
  pipelines:
    metrics:
      receivers: [hostmetrics]
      processors: [batch]
      exporters: [splunk_hec/metrics]
    logs:
      receivers: [filelog]
      processors: [batch]
      exporters: [splunk_hec/logs]